@model CinemaManagement.ViewModels.TwoFactorVerifyViewModel
@{
    ViewData["Title"] = "Xác thực Hai Yếu tố";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-shield-alt me-2"></i>
                        Xác thực Hai Yếu tố
                    </h3>
                </div>
                <div class="card-body p-5">
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <div class="alert alert-info">
                        <h5><i class="fas fa-info-circle me-2"></i>Xác thực bảo mật</h5>
                        <p class="mb-0">Vui lòng nhập mã 6 chữ số từ ứng dụng xác thực của bạn để hoàn tất đăng nhập.</p>
                    </div>

                    <form asp-action="TwoFactorVerify" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        
                        <div class="form-group mb-4">
                            <label for="Code" class="form-label">
                                <i class="fas fa-lock me-2"></i>Mã xác thực
                            </label>
                            <input type="text" 
                                   class="form-control form-control-lg text-center" 
                                   asp-for="Code" 
                                   maxlength="6" 
                                   pattern="\d{6}" 
                                   placeholder="000000" 
                                   required 
                                   autocomplete="off" />
                            <div class="form-text">
                                <i class="fas fa-clock me-1"></i>
                                Mã 6 chữ số từ ứng dụng xác thực (có hiệu lực trong 30 giây)
                            </div>
                        </div>

                        <!-- Phần backup codes đã được xóa -->

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Xác thực và Đăng nhập
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <h6 class="text-muted mb-3">
                            <i class="fas fa-question-circle me-2"></i>Gặp vấn đề?
                        </h6>
                        <div class="btn-group-vertical w-100">
                            <a href="@Url.Action("TwoFactorStatus", "Auth")" class="btn btn-outline-info mb-2">
                                <i class="fas fa-cog me-2"></i>Quản lý 2FA
                            </a>
                            <a href="@Url.Action("Logout", "Auth")" class="btn btn-outline-danger">
                                <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Hướng dẫn sử dụng -->
            <div class="card mt-4 border-info">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-lightbulb me-2"></i>Hướng dẫn sử dụng
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">
                                <i class="fas fa-mobile-alt me-2"></i>Ứng dụng xác thực
                            </h6>
                            <ul class="list-unstyled small">
                                <li><i class="fas fa-check text-success me-1"></i>Google Authenticator</li>
                                <li><i class="fas fa-check text-success me-1"></i>Microsoft Authenticator</li>
                                <li><i class="fas fa-check text-success me-1"></i>Authy</li>
                                <li><i class="fas fa-check text-success me-1"></i>1Password</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>Lưu ý bảo mật
                            </h6>
                            <ul class="list-unstyled small">
                                <li><i class="fas fa-shield-alt text-info me-1"></i>Không chia sẻ mã</li>
                                <li><i class="fas fa-clock text-warning me-1"></i>Mã có thời hạn 30s</li>
                                <li><i class="fas fa-key text-danger me-1"></i>Lưu mã dự phòng</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-focus vào input code
        document.getElementById('Code').focus();

        // Auto-format mã 6 chữ số
        document.getElementById('Code').addEventListener('input', function(e) {
            var value = e.target.value.replace(/\D/g, '');
            if (value.length > 6) {
                value = value.substring(0, 6);
            }
            e.target.value = value;
        });

        // Toggle backup code option
        document.getElementById('useBackupCode').addEventListener('change', function(e) {
            var codeInput = document.getElementById('Code');
            if (e.target.checked) {
                codeInput.placeholder = "Mã dự phòng";
                codeInput.setAttribute('pattern', '\\d{6}');
            } else {
                codeInput.placeholder = "000000";
                codeInput.setAttribute('pattern', '\\d{6}');
            }
        });

        // Validate form
        document.querySelector('form').addEventListener('submit', function(e) {
            var code = document.getElementById('Code').value;
            var useBackup = document.getElementById('useBackupCode').checked;
            
            if (code.length !== 6 || !/^\d{6}$/.test(code)) {
                e.preventDefault();
                var message = useBackup ? 'Vui lòng nhập mã dự phòng 6 chữ số hợp lệ.' : 'Vui lòng nhập mã xác thực 6 chữ số hợp lệ.';
                alert(message);
                document.getElementById('Code').focus();
            }
        });

        // Auto-submit khi nhập đủ 6 chữ số
        document.getElementById('Code').addEventListener('input', function(e) {
            if (e.target.value.length === 6) {
                // Tự động submit sau 1 giây
                setTimeout(function() {
                    document.querySelector('form').submit();
                }, 1000);
            }
        });
    </script>
} 