@{
    ViewData["Title"] = "Đăng Nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản lý Rạp Chiếu Phim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="auth-container">
                    <div class="row g-0">
                        <div class="col-lg-6 auth-left">
                            <div class="h-100 d-flex flex-column justify-content-center">
                                <i class="fas fa-film auth-icon login"></i>
                                <h2 class="mb-3">Hệ thống Quản lý</h2>
                                <h3 class="mb-4">Rạp Chiếu Phim</h3>
                                <p class="lead">Chào mừng bạn đến với hệ thống quản lý rạp chiếu phim hiện đại và chuyên nghiệp.</p>
                                <div class="features-list">
                                    <div class="feature-item">
                                        <i class="fas fa-ticket-alt"></i>
                                        <span>Đặt vé trực tuyến</span>
                                    </div>
                                    <div class="feature-item">
                                        <i class="fas fa-users"></i>
                                        <span>Quản lý khách hàng</span>
                                    </div>
                                    <div class="feature-item">
                                        <i class="fas fa-chart-bar"></i>
                                        <span>Báo cáo thống kê</span>
                                    </div>
                                    <div class="feature-item">
                                        <i class="fas fa-calendar-alt"></i>
                                        <span>Lịch chiếu phim</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 auth-right">
                            <div class="h-100 d-flex flex-column justify-content-center">
                                <h4 class="text-center mb-4">
                                    <i class="fas fa-sign-in-alt me-2 text-primary"></i>
                                    Đăng Nhập
                                </h4>
                                
                                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        @ViewBag.ErrorMessage
                                    </div>
                                }

                                <form method="post" asp-action="Login" id="loginForm">
                                    <div class="mb-3">
                                        <label for="email" class="form-label">
                                            <i class="fas fa-envelope me-2"></i>Email
                                        </label>
                                        <input type="email" class="form-control" name="email" id="email" placeholder="Nhập email của bạn" required>
                                        <div id="emailFeedback" class="invalid-feedback" style="display: none;">
                                            <i class="fas fa-exclamation-circle me-1"></i>Vui lòng nhập email hợp lệ
                                        </div>
                                        <div id="emailValid" class="valid-feedback" style="display: none;">
                                            <i class="fas fa-check-circle me-1"></i>Email hợp lệ
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <label for="password" class="form-label">
                                            <i class="fas fa-lock me-2"></i>Mật khẩu
                                        </label>
                                        <input type="password" class="form-control" name="password" id="password" placeholder="Nhập mật khẩu" required minlength="6">
                                        <div id="passwordFeedback" class="invalid-feedback" style="display: none;">
                                            <i class="fas fa-exclamation-circle me-1"></i>Mật khẩu phải có ít nhất 6 ký tự
                                        </div>
                                        <div class="text-end mt-1">
                                            <a href="@Url.Action("ForgotPassword", "Auth")" class="text-primary text-decoration-none small">
                                                <i class="fas fa-question-circle me-1"></i>Quên mật khẩu?
                                            </a>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-auth" id="loginBtn">
                                        <i class="fas fa-sign-in-alt me-2"></i>Đăng Nhập
                                    </button>
                                </form>

                                <div class="mt-3">
                                    <div class="text-center">
                                        <span class="text-muted">hoặc</span>
                                    </div>
                                    <a href="@Url.Action("GoogleLogin", "Auth")" class="btn btn-outline-danger w-100 mt-2" style="border-radius: 10px; padding: 15px;">
                                        <i class="fab fa-google me-2"></i>Đăng nhập bằng Google
                                    </a>
                                </div>

                                <div class="quick-login-container">
                                    <h6 class="quick-login-title">
                                        <i class="fas fa-rocket me-2"></i>Đăng nhập nhanh
                                    </h6>
                                    <div class="row g-2">
                                        <div class="col-12">
                                            <button type="button" class="btn btn-success w-100 quick-login-btn mb-2" 
                                                    data-email="an.nv@gmail.com" 
                                                    data-password="hashed_password1">
                                                <i class="fas fa-user-crown"></i>
                                                <span>Quản lý - Nguyễn Văn An (Dashboard)</span>
                                            </button>
                                        </div>
                                        <div class="col-md-6">
                                            <button type="button" class="btn btn-primary w-100 quick-login-btn" 
                                                    data-email="binh.tt@gmail.com" 
                                                    data-password="hashed_password2">
                                                <i class="fas fa-ticket-alt"></i>
                                                <span>Nhân viên</span>
                                            </button>
                                        </div>
                                        <div class="col-md-6">
                                            <button type="button" class="btn btn-outline-info w-100 quick-login-btn" 
                                                    data-email="hoa.nt@gmail.com" 
                                                    data-password="hashed_password4">
                                                <i class="fas fa-user"></i>
                                                <span>Khách hàng</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-4 text-center">
                                    <small class="text-muted">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Nhấn nút để đăng nhập nhanh
                                    </small>
                                </div>

                                <div class="mt-3 text-center">
                                    <p class="text-muted">
                                        Chưa có tài khoản? 
                                        <a href="@Url.Action("Register", "Auth")" class="text-primary text-decoration-none fw-bold">
                                            <i class="fas fa-user-plus me-1"></i>Đăng ký ngay
                                        </a>
                                    </p>
                                </div>

                                <div class="mt-3">
                                    <div class="card border-0 bg-light">
                                        <div class="card-body py-2">
                                            <small class="text-muted">
                                                <strong>Thông tin tài khoản:</strong><br>
                                                • Quản lý: an.nv@gmail.com / hashed_password1<br>
                                                • Nhân viên: binh.tt@gmail.com / hashed_password2<br>
                                                • Khách hàng: hoa.nt@gmail.com / hashed_password4
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
</body>
</html>
