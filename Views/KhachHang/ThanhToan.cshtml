@model CinemaManagement.ViewModels.KhachHangThanhToanViewModel
@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="/css/thanh-toan-custom.css">
<div class="container py-4">
    <div class="row g-4">
        <!-- Thông tin đơn hàng -->
        <div class="col-lg-7">
            <div class="card modern-card">
                <div class="modern-card-header d-flex align-items-center">
                    <i class="fas fa-ticket-alt fa-lg me-2"></i>
                    <span class="modern-section-title mb-0">Thông tin đơn hàng</span>
                </div>
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table modern-table mb-0">
                            <thead>
                                <tr>
                                    <th>Phim</th>
                                    <th>Phòng</th>
                                    <th>Ghế</th>
                                    <th>Thời gian</th>
                                    <th>Giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.GioHang == null || !Model.GioHang.Any())
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-danger fw-bold">
                                            Đơn hàng này chưa có thông tin ghế. Vui lòng đặt lại vé hoặc liên hệ hỗ trợ.
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var item in Model.GioHang)
                                    {
                                        <tr>
                                            <td><strong>@item.TenPhim</strong></td>
                                            <td>@item.TenPhong</td>
                                            <td><span class="modern-badge">@item.SoGhe</span></td>
                                            <td>@item.ThoiGianChieu.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-success fw-bold">@item.Gia.ToString("N0") VNĐ</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Thanh toán -->
        <div class="col-lg-5">
            <div class="card modern-card">
                <div class="modern-card-header d-flex align-items-center bg-success" style="background: linear-gradient(90deg, #43cea2 0%, #185a9d 100%) !important;">
                    <i class="fas fa-credit-card fa-lg me-2"></i>
                    <span class="modern-section-title mb-0" style="color:#fff;">Thanh toán</span>
                </div>
                <div class="card-body p-4">
                    <form method="post" action="@Url.Action("XuLyThanhToan")">
                        @if (!string.IsNullOrEmpty(Model.MaHoaDon))
                        {
                            <input type="hidden" name="maHoaDonTemp" value="@Model.MaHoaDon" />
                        }
                        <input type="hidden" name="paymentMethod" value="banking" />
                        <!-- Voucher -->
                        @if (Model.Vouchers.Any())
                        {
                            <div class="mb-3">
                                <label for="voucher" class="form-label fw-bold"><i class="fas fa-gift me-1"></i>Chọn voucher giảm giá:</label>
                                <select class="form-select" name="maVoucher" id="voucher">
                                    <option value="">Không sử dụng voucher</option>
                                    @foreach (var voucher in Model.Vouchers)
                                    {
                                        <option value="@voucher.MaGiamGia" data-discount="@voucher.PhanTramGiam">
                                            @voucher.TenGiamGia - Giảm @voucher.PhanTramGiam%
                                        </option>
                                    }
                                </select>
                            </div>
                        }
                        <!-- Tổng tiền -->
                        <div class="border-top pt-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Tạm tính:</span>
                                <span id="subtotal">@Model.TongTien.ToString("N0") VNĐ</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2" id="discount-row" style="display: none;">
                                <span>Giảm giá:</span>
                                <span class="text-danger" id="discount-amount">0 VNĐ</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3 border-top pt-2">
                                <strong>Tổng cộng:</strong>
                                <strong class="text-success" id="total-amount">@Model.TongTien.ToString("N0") VNĐ</strong>
                            </div>
                        </div>
                        <button type="submit" class="modern-btn-main w-100 btn-lg mt-2">
                            <i class="fas fa-lock me-1"></i>Thanh toán ngay
                        </button>
                    </form>
                    <div class="mt-3">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-arrow-left me-1"></i>Quay lại trang chủ
                        </a>
                    </div>
                </div>
            </div>
            <div class="card modern-card mt-3">
                <div class="card-body text-center">
                    <i class="fas fa-shield-alt fa-2x text-success mb-2"></i>
                    <h6 class="fw-bold">Bảo mật thanh toán</h6>
                    <small class="text-muted">
                        Thông tin thanh toán của bạn được mã hóa và bảo mật tuyệt đối
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
@if (TempData["ErrorMessage"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div class="toast show modern-toast" role="alert">
            <div class="toast-header bg-danger text-white">
                <strong class="me-auto"><i class="fas fa-exclamation-triangle me-2"></i>Lỗi</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @TempData["ErrorMessage"]
            </div>
        </div>
    </div>
}
@section Scripts {
    <script>
        let originalTotal = @(Model.TongTien.ToString("F0", System.Globalization.CultureInfo.InvariantCulture));
        let currentDiscount = 0;
        function formatMoney(amount) {
            if (isNaN(amount)) return '0';
            return amount.toLocaleString('vi-VN');
        }
        function updatePaymentSummary() {
            try {
                var finalTotal = originalTotal - currentDiscount;
                $('#subtotal').text(formatMoney(originalTotal) + ' VNĐ');
                $('#discount-amount').text('-' + formatMoney(currentDiscount) + ' VNĐ');
                $('#total-amount').text(formatMoney(finalTotal) + ' VNĐ');
                if (currentDiscount > 0) {
                    $('#discount-row').show().removeClass('d-none');
                } else {
                    $('#discount-row').hide().addClass('d-none');
                }
            } catch (error) {
                console.error('Error updating payment summary:', error);
            }
        }
        $(document).ready(function() {
            $('#voucher').on('change', function() {
                const selectedOption = $(this).find('option:selected');
                const discountPercent = parseFloat(selectedOption.data('discount')) || 0;
                if (discountPercent > 0 && selectedOption.val()) {
                    currentDiscount = Math.round(originalTotal * discountPercent / 100);
                    updatePaymentSummary();
                } else {
                    currentDiscount = 0;
                    updatePaymentSummary();
                }
            });
            setTimeout(function() {
                $('#voucher').trigger('change');
                updatePaymentSummary();
            }, 100);
        });
    </script>
}
