@model CinemaManagement.ViewModels.DanhGiaViewModel

@{
    ViewData["Title"] = "Đánh giá phim";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-star text-warning"></i>
                        Đánh giá phim: @Model.TenPhim
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="MaPhim" />
                        <input type="hidden" asp-for="TenPhim" />
                        <input type="hidden" asp-for="maKhachHang" />
                        <input type="hidden" asp-for="HoTenKhachHang" />

                        <div class="mb-3">
                            <label class="form-label">Phim:</label>
                            <input type="text" class="form-control" value="@Model.TenPhim" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Khách hàng:</label>
                            <input type="text" class="form-control" value="@Model.HoTenKhachHang" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="SoSao" class="form-label">Đánh giá sao:</label>
                            <input type="hidden" asp-for="SoSao" id="rating-value" />
                            <div class="rating-stars" style="display: flex !important; flex-direction: row !important; align-items: center !important; gap: 5px !important;">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <div class="rating-star" data-rating="@i" style="cursor: pointer !important; padding: 5px !important; background: white !important; border-radius: 3px !important;">
                                        <i class="fas fa-star" style="font-size: 2rem !important;"></i>
                                    </div>
                                }
                            </div>
                            <span asp-validation-for="SoSao" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NoiDungBinhLuan" class="form-label">Bình luận (không bắt buộc):</label>
                            <textarea asp-for="NoiDungBinhLuan" class="form-control" rows="4" 
                                      placeholder="Chia sẻ cảm nhận của bạn về phim này..."></textarea>
                            <span asp-validation-for="NoiDungBinhLuan" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="KhachHang" asp-action="ChiTietPhim" asp-route-maPhim="@Model.MaPhim.Trim()" 
                               class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> Gửi đánh giá
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
            <script>
            $(document).ready(function() {
                // Xử lý click vào stars
                $('.rating-star').click(function() {
                    var rating = $(this).data('rating');
                    $('#rating-value').val(rating);
                    
                    // Cập nhật hiển thị stars
                    $('.rating-star').removeClass('text-warning');
                    $('.rating-star').each(function() {
                        if ($(this).data('rating') <= rating) {
                            $(this).addClass('text-warning');
                        }
                    });
                });
            });
        </script>
} 